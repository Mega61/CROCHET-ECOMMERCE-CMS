{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Settings",
    "description": "Global site configuration and settings"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "default": "Crochet Ecommerce"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "masterEmail": {
      "type": "email",
      "required": true
    },
    "contactEmail": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "aboutText": {
      "type": "richtext"
    },
    "termsAndConditions": {
      "type": "richtext"
    },
    "shippingPolicy": {
      "type": "richtext"
    }
  }
}
